<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create table for transaction entity" author="andrii-minchekov">
        <createTable tableName="transactions">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="request_id" type="TEXT">
                <constraints nullable="false" unique="true" uniqueConstraintName="payment_request_id_idx1"/>
            </column>
            <column name="payment_intent_id" type="BIGINT">
                <constraints nullable="false" unique="true" uniqueConstraintName="payment_intent_id_idx1"/>
            </column>
            <column name="acquirer_tx_id" type="TEXT"/>
            <column name="acquirer_id" type="TEXT"/>
            <column name="challenge_url" type="TEXT"/>
            <column name="merchant_id" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="merchant_redirect_url" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="card_number" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="card_expiry_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="card_token" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="order_amount" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="order_currency" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="risk_check_status" type="TEXT"/>
            <column name="transaction_status" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_date" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
